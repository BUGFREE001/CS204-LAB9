#4

struct distance{
	int x;
	int y;
};

int main()
{
	struct distance mn;
	printf("Enter point x and point y: ");
	scanf("%d%d", &mn.x, &mn.y);
	int a = mn.x;
	int b = mn.y;
	int c=a-b;
	printf("Distance is: %d". mn(c));
}





